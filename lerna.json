{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "npm",
  "useNx": true,
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "contents": "lib"
    },
    "version": {
      "allowBranch": ["master"]
    }
  }
}
